<article class="post">
  <h2><%= @post.title %></h2>
  <time datetime="<%= @post.created_at %>"><%= @post.created_at.strftime("Posted %m/%d/%Y") %></time>
  <div class="text">
    <%= simple_format @post.body %>
  </div>
</article>

<div class="comments">
  <h3><%= pluralize(@comments.count, 'Comment') %></h3>
  <div class="comment">
    <% @comments.each do |comment| %>
      <div class="author"><b><%= comment.name %></b> <time datetime="<%= comment.created_at %>">&bull; <%= comment.created_at.strftime("Posted %m/%d/%Y") %></time></div>
      <p><%= comment.body %></p>
    <% end %>
  </div>

  <div class="new-comment">
    <h4>New Comment</h4>
    <%= render 'comments/form', comment: @post.comments.new %>
  </div>
</div>





<% if false %>


<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>

<%= simple_format @post.body %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

